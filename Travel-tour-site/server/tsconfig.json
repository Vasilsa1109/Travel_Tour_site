{
    "compilerOptions": {
      "target": "ES2020", 
      "module": "ESNext",
      "moduleResolution": "Node",            
      "rootDir": ".",             
      "outDir": "dist",  //папка создается для дальнейшего деплоя-сборки приложения                  
      "strict": true,                
      "esModuleInterop": true,       
      "skipLibCheck": true,          
      "forceConsistentCasingInFileNames": true, 
      "resolveJsonModule": true
    },
    "include": ["**/*.ts", "server.ts"],      
    "exclude": ["node_modules"]     
  }