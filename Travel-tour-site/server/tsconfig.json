{
    "compilerOptions": {
      "target": "ES2020",            
      "module": "CommonJS",          
      "rootDir": "src",             
      "outDir": "dist", //папка создается для дальнейшего деплоя-сборки приложения             
      "strict": true,                
      "esModuleInterop": true,       
      "skipLibCheck": true,          
      "forceConsistentCasingInFileNames": true, 
      "resolveJsonModule": true     
    },
    "include": ["src/**/*.ts"],      
    "exclude": ["node_modules"]     
  }